root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.kt]
indent_size = 4

[*.kts]
indent_size = 4

[*.xml]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.gradle]
indent_size = 4

[*.properties]
indent_size = 1
