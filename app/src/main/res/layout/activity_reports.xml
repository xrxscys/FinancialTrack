<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:orientation="vertical"
    tools:context=".ui.reports.ReportsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="20sp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- body -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- back -->
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?android:attr/colorForeground"
                android:src="@drawable/ic_back"
                android:padding="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="12sp"
                android:orientation="horizontal">
                <!-- title -->
                <TextView
                    android:textAlignment="gravity"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Insights"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_stats_range"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="4dp"
                    app:cornerRadius="5dp"
                    app:backgroundTint="?attr/cardBackgroundColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_chevron_down"
                    android:drawablePadding="0dp"
                    android:drawableTint="@color/gray"
                    android:textColor="@color/gray"
                    android:text="Weekly"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:paddingHorizontal="20sp"
                android:paddingVertical="16sp"
                android:background="@drawable/card"
                android:backgroundTint="?attr/cardBackgroundColor"
                android:layout_marginBottom="6sp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textAllCaps="true"
                        android:layout_marginBottom="4sp"
                        android:textStyle="bold"
                        android:text="2 DEC - 2 JAN"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="true"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_net_inc_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="20sp"
                            android:textColor="@color/gray"
                            android:text="+P"/>
                        <TextView
                            android:id="@+id/tv_net_inc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="100"
                            android:textSize="30sp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        android:layout_marginBottom="4sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:text="Spent/Day"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_spent_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="20sp"
                            android:textColor="@color/gray"
                            android:text="P"/>
                        <TextView
                            android:id="@+id/tv_spent"
                            android:textAlignment="textEnd"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="100"
                            android:textSize="30sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- list -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/divider"
                android:showDividers="middle"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <!-- total income card -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6sp"
                        android:layout_weight="1"
                        android:padding="12sp"
                        android:background="@drawable/card"
                        android:backgroundTint="?attr/cardBackgroundColor"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_marginRight="4sp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical">
                                <ImageView
                                    android:layout_width="34sp"
                                    android:layout_height="34sp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:background="@drawable/card"
                                    android:alpha="0.2"
                                    android:backgroundTint="@color/income_green" />
                                <ImageView
                                    android:rotation="225"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    android:backgroundTint="@color/income_green"
                                    android:background="@drawable/ic_arrow" />
                            </FrameLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/gray"
                                    android:includeFontPadding="false"
                                    android:text="Income"
                                    android:textStyle="bold" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal">
                                    <TextView
                                        android:id="@+id/tv_ti"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:includeFontPadding="false"
                                        android:textSize="22sp"
                                        android:textStyle="bold"
                                        android:text="P1,200.00"/>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- total expenses card -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="12sp"
                        android:background="@drawable/card"
                        android:backgroundTint="?attr/cardBackgroundColor"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_marginRight="4sp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical">
                                <ImageView
                                    android:layout_width="34sp"
                                    android:layout_height="34sp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:background="@drawable/card"
                                    android:alpha="0.2"
                                    android:backgroundTint="@color/expense_red" />
                                <ImageView
                                    android:rotation="315"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    android:backgroundTint="@color/expense_red"
                                    android:background="@drawable/ic_arrow" />
                            </FrameLayout>
                           <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/gray"
                                    android:includeFontPadding="false"
                                    android:text="Expenses"
                                    android:textStyle="bold" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal">
                                    <TextView
                                        android:id="@+id/tv_te"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:includeFontPadding="false"
                                        android:textSize="22sp"
                                        android:textStyle="bold"
                                        android:text="P1,200.00"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="16dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:showDividers="middle"
                    android:divider="@drawable/divider"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="match_parent"
                            android:background="@drawable/card"
                            android:backgroundTint="@color/expense_red"
                            android:layout_height="30sp"/>
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:text="Rent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="match_parent"
                            android:background="@drawable/card"
                            android:backgroundTint="@color/income_green"
                            android:layout_height="30sp"/>
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:text="Food"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="match_parent"
                            android:background="@drawable/card"
                            android:backgroundTint="@color/primary"
                            android:layout_height="30sp"/>
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:text="School"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:text="Total Debt"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"
                        android:text="Paid in Total"/>
                </LinearLayout>
                <View
                    android:layout_width="230sp"
                    android:layout_height="34sp"
                    android:backgroundTint="@color/secondary"
                    android:background="@drawable/card"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="P 230,302"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:text="P 53,424"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
