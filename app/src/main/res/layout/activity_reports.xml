<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:orientation="vertical"
    tools:context=".ui.reports.ReportsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="20sp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- body -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp">

                <!-- back  -->
                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:src="@drawable/ic_back"
                    app:tint="?android:attr/colorForeground" />

                <!-- date selector -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_stats_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="4dp"
                    app:cornerRadius="5dp"
                    app:backgroundTint="?attr/cardBackgroundColor"
                    android:drawableEnd="@drawable/ic_chevron_down"
                    android:drawableTint="@color/gray"
                    android:textColor="@color/gray"
                    android:text="Weekly" />

                <!-- title -->
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Reports"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:gravity="center" />
            </RelativeLayout>


            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6sp"
                android:textAlignment="textStart"
                android:text="Account Name"
                android:textColor="?android:attr/colorForeground"
                app:icon="@drawable/ic_trash"
                app:iconTint="@color/gray"
                app:cornerRadius="12sp"
                app:strokeWidth="0sp"
                app:backgroundTint="?attr/cardBackgroundColor" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:paddingHorizontal="20sp"
                android:paddingVertical="16sp"
                android:background="@drawable/card"
                android:backgroundTint="?attr/cardBackgroundColor"
                android:layout_marginBottom="6sp">
                    <!-- NET Income -->
                    <TextView
                        android:id="@+id/tv_date_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textAllCaps="true"
                        android:layout_marginBottom="4sp"
                        android:textStyle="bold"
                        android:text="2 DEC - 2 JAN"/>
                    <TextView
                        android:id="@+id/tv_net_inc_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:text="+P"
                        app:layout_constraintTop_toBottomOf="@+id/tv_date_range"
                        app:layout_constraintStart_toStartOf="@+id/tv_date_range"/>
                    <TextView
                        android:id="@+id/tv_net_inc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="100"
                        android:textSize="30sp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_date_range"
                        app:layout_constraintStart_toEndOf="@+id/tv_net_inc_symbol" />

                    <!-- Spent/Day -->
                    <TextView
                        android:id="@+id/tv_spent_per_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        android:layout_marginBottom="4sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:text="Spent/Day"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                    <TextView
                        android:id="@+id/tv_spent_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:text="P"
                        app:layout_constraintTop_toBottomOf="@+id/tv_spent_per_day"
                        app:layout_constraintEnd_toStartOf="@+id/tv_spent" />
                    <TextView
                        android:id="@+id/tv_spent"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="100"
                        android:textSize="30sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_spent_per_day"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <LinearLayout
                    android:id="@+id/income_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6sp"
                    android:layout_weight="1"
                    android:padding="12sp"
                    android:background="@drawable/card"
                    android:backgroundTint="?attr/cardBackgroundColor"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_marginRight="4sp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:layout_width="34sp"
                                android:layout_height="34sp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/card"
                                android:alpha="0.2"
                                android:backgroundTint="@color/income_green" />
                            <ImageView
                                android:rotation="225"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:backgroundTint="@color/income_green"
                                android:background="@drawable/ic_arrow" />
                        </FrameLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/gray"
                                android:includeFontPadding="false"
                                android:text="Income"
                                android:textStyle="bold" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">
                                <TextView
                                    android:id="@+id/tv_ti"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:includeFontPadding="false"
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    android:text="P1,200.00"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!-- total expenses card -->
                <LinearLayout
                    android:id="@+id/expenses_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12sp"
                    android:background="@drawable/card"
                    android:backgroundTint="?attr/cardBackgroundColor"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_marginRight="4sp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:layout_width="34sp"
                                android:layout_height="34sp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/card"
                                android:alpha="0.2"
                                android:backgroundTint="@color/expense_red" />
                            <ImageView
                                android:rotation="315"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:backgroundTint="@color/expense_red"
                                android:background="@drawable/ic_arrow" />
                        </FrameLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/gray"
                                android:includeFontPadding="false"
                                android:text="Expenses"
                                android:textStyle="bold" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">
                                <TextView
                                    android:id="@+id/tv_te"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:includeFontPadding="false"
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    android:text="P1,200.00"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- list -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/divider"
                android:showDividers="middle"
                android:layout_marginBottom="12dp">

                <!-- NET Income Bar Chart -->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="16dp" />

                <!-- donut chart for categories -->
                <!-- line chart for categories -->

                <!-- Total Debt Stats -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_total_debt_title"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:text="Total Debt"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="P 230,302"
                        app:layout_constraintStart_toStartOf="@+id/tv_total_debt_title"
                        app:layout_constraintTop_toBottomOf="@+id/tv_total_debt_title"/>

                    <TextView
                        android:id="@+id/tv_paid_in_total_title"
                        android:layout_width="wrap_content"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"
                        android:text="Paid in Total"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:id="@+id/tv_paid_in_total_value"
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:text="P 53,424"
                        app:layout_constraintEnd_toEndOf="@+id/tv_paid_in_total_title"
                        app:layout_constraintTop_toBottomOf="@+id/tv_paid_in_total_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Financial Goals Statistics -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Financial Goals"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Budget Statistics -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budgets"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                    <!-- progress bar for total budget -->
                    <!-- cards for each budget and its progress -->
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
