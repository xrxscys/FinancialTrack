<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:orientation="vertical"
    tools:context=".ui.reports.ReportsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="20sp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- body -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp">
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <!-- back  -->
                    <ImageButton
                        android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_gravity="center_vertical"
                        android:padding="8dp"
                        android:src="@drawable/ic_back"
                        app:tint="?android:attr/colorForeground" />
                    <!-- title -->
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Reports"
                        android:textColor="?android:attr/colorForeground"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>


                <!-- date selector -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_stats_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp"
                    android:background="@android:color/transparent"
                    android:drawableEnd="@drawable/ic_chevron_down"
                    android:drawableTint="@color/gray"
                    android:textColor="?android:attr/colorForeground"
                    android:text="Weekly" />


            </RelativeLayout>


            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2sp"
                android:textAlignment="textStart"
                android:text="Account Name"
                android:textColor="?android:attr/colorForeground"
                app:icon="@drawable/ic_trash"
                app:iconTint="@color/gray"
                app:cornerRadius="12sp"
                app:strokeWidth="0sp"
                app:backgroundTint="?attr/cardBackgroundColor" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:paddingHorizontal="20sp"
                android:paddingVertical="16sp"
                android:background="@drawable/card"
                android:backgroundTint="?attr/cardBackgroundColor"
                android:layout_marginBottom="6sp">
                    <!-- NET Income -->
                    <TextView
                        android:id="@+id/tv_date_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textAllCaps="true"
                        android:layout_marginBottom="4sp"
                        android:textStyle="bold"
                        android:text="2 DEC - 2 JAN"/>
                    <TextView
                        android:id="@+id/tv_net_inc_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:text="+P"
                        app:layout_constraintTop_toBottomOf="@+id/tv_date_range"
                        app:layout_constraintStart_toStartOf="@+id/tv_date_range"/>
                    <TextView
                        android:id="@+id/tv_net_inc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="100"
                        android:textSize="30sp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_date_range"
                        app:layout_constraintStart_toEndOf="@+id/tv_net_inc_symbol" />

                    <!-- Spent/Day -->
                    <TextView
                        android:id="@+id/tv_spent_per_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        android:layout_marginBottom="4sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:text="Spent/Day"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                    <TextView
                        android:id="@+id/tv_spent_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:text="P"
                        app:layout_constraintTop_toBottomOf="@+id/tv_spent_per_day"
                        app:layout_constraintEnd_toStartOf="@+id/tv_spent" />
                    <TextView
                        android:id="@+id/tv_spent"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="100"
                        android:textSize="30sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_spent_per_day"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2sp"
                android:layout_gravity="center">
                <LinearLayout
                    android:id="@+id/income_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6sp"
                    android:layout_weight="1"
                    android:padding="12sp"
                    android:background="@drawable/card"
                    android:backgroundTint="?attr/cardBackgroundColor"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_marginRight="4sp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:layout_width="34sp"
                                android:layout_height="34sp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/card"
                                android:alpha="0.2"
                                android:backgroundTint="@color/income_green" />
                            <ImageView
                                android:rotation="225"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:backgroundTint="@color/income_green"
                                android:background="@drawable/ic_arrow" />
                        </FrameLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/gray"
                                android:includeFontPadding="false"
                                android:text="Income"
                                android:textStyle="bold" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">
                                <TextView
                                    android:id="@+id/tv_ti"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:includeFontPadding="false"
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    android:text="P1,200.00"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!-- total expenses card -->
                <LinearLayout
                    android:id="@+id/expenses_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12sp"
                    android:background="@drawable/card"
                    android:backgroundTint="?attr/cardBackgroundColor"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_marginRight="4sp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:layout_width="34sp"
                                android:layout_height="34sp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/card"
                                android:alpha="0.2"
                                android:backgroundTint="@color/expense_red" />
                            <ImageView
                                android:rotation="315"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:backgroundTint="@color/expense_red"
                                android:background="@drawable/ic_arrow" />
                        </FrameLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/gray"
                                android:includeFontPadding="false"
                                android:text="Expenses"
                                android:textStyle="bold" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">
                                <TextView
                                    android:id="@+id/tv_te"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:includeFontPadding="false"
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    android:text="P1,200.00"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- list -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/divider"
                android:showDividers="middle"
                android:layout_marginBottom="12dp">

                <!-- TODO: NET Income Bar Chart -->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp" />

                <!-- TODO: tab to switch-->
                    <!-- TODO: donut chart for categories -->
                    <!-- TODO: line chart for categories -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Categorical"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_debts_and_loans_title"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:text="Debts and Loans"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent">
                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progress_debts_loans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:indicatorSize="130sp"
                            app:trackThickness="16sp"
                            app:trackCornerRadius="12sp"
                            app:trackColor="?attr/trackColor"
                            app:indicatorColor="@color/primary"
                            android:max="100" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/tv_debt_percent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="100%"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:layout_gravity="center" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="Paid"
                                android:textSize="14sp"
                                android:layout_gravity="center" />
                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_balance_title"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Balance"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_debts_and_loans_title"/>
                    <TextView
                        android:id="@+id/tv_balance_value"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Value"
                        app:layout_constraintStart_toStartOf="@+id/tv_balance_title"
                        app:layout_constraintTop_toBottomOf="@+id/tv_balance_title"/>

                    <TextView
                        android:id="@+id/tv_next_payment_title"
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Next Due"
                        app:layout_constraintStart_toStartOf="@+id/tv_balance_value"
                        app:layout_constraintTop_toBottomOf="@+id/tv_balance_value"/>

                    <TextView
                        android:id="@+id/tv_next_payment_value"
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:text="Value"
                        app:layout_constraintStart_toStartOf="@+id/tv_next_payment_title"
                        app:layout_constraintTop_toBottomOf="@+id/tv_next_payment_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- TODO: Financial Goals Statistics -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_goals_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Financial Goals"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progress_goals"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            app:indicatorSize="130sp"
                            app:trackThickness="16sp"
                            app:trackCornerRadius="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_goals_title"/>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/tv_total_saved_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Total Saved"
                        app:layout_constraintTop_toBottomOf="@+id/progress_goals"/>
                    <TextView
                        android:id="@+id/tv_total_saved_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Value"
                        app:layout_constraintTop_toBottomOf="@+id/tv_total_saved_title"/>
                    <TextView
                        android:id="@+id/tv_remaining_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Remaining"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/progress_goals"/>
                    <TextView
                        android:id="@+id/tv_remaining_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Value"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_remaining_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
