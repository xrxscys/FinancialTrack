<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="1dp"
    card_view:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Collapsed View - Minimalist -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/collapsedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <!-- Loan Title -->
            <TextView
                android:id="@+id/loanTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Loan Title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1A1A1A"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintEnd_toStartOf="@id/expandIcon"
                card_view:layout_constraintHorizontal_bias="0" />

            <!-- Expand Icon -->
            <ImageView
                android:id="@+id/expandIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_expand_more"
                android:contentDescription="Expand"
                android:tint="#999999"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="@id/loanTitle"
                card_view:layout_constraintBottom_toBottomOf="@id/loanTitle" />

            <!-- Amount and Date Row -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/loanTitle">

                <!-- Amount -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        android:textSize="11sp"
                        android:textColor="#999999" />

                    <TextView
                        android:id="@+id/loanAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚±0.00"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <!-- Deadline -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due Date"
                        android:textSize="11sp"
                        android:textColor="#999999" />

                    <TextView
                        android:id="@+id/loanDeadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MMM dd, yyyy"
                        android:textSize="14sp"
                        android:textColor="#1A1A1A"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Expanded View - Minimalist -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expandedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:visibility="gone"
            android:background="@color/white">

            <!-- Subtle Divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                card_view:layout_constraintTop_toTopOf="parent" />

            <!-- Description Section -->
            <TextView
                android:id="@+id/descriptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#1A1A1A"
                android:layout_marginTop="12dp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/divider" />

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No description provided"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/descriptionLabel" />

            <!-- Full Details Section -->
            <TextView
                android:id="@+id/detailsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#1A1A1A"
                android:layout_marginTop="12dp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/descriptionText" />

            <TextView
                android:id="@+id/fullDetailsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="#666666"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/detailsLabel" />

            <!-- Mark as Paid Checkbox -->
            <CheckBox
                android:id="@+id/markAsPaidCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark as Paid"
                android:textSize="13sp"
                android:textColor="#1A1A1A"
                android:layout_marginTop="14dp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/fullDetailsText" />

            <!-- Delete Button (for history only) -->
            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete"
                android:tint="#999999"
                android:visibility="gone"
                android:layout_marginTop="14dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/fullDetailsText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
