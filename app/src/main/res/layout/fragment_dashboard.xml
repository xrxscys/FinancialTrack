<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ui.dashboard.DashboardFragment">

    <!-- Consistent content width -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="28dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="28dp" />

    <!-- Blue header background (behind greeting/balance/income-expense) -->
    <View
        android:id="@+id/viewHeaderBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_dashboard_header_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/cardIncomeExpense" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarDashboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:title=""
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Profile icon (top-left) -->
    <ImageButton
        android:id="@+id/btnProfileTop"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Profile"
        android:src="@drawable/ic_circle_profile"
        app:tint="@android:color/white"

        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintBottom_toBottomOf="@id/toolbarDashboard"/>

    <!-- Greeting (left) -->
    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello, there!"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="2dp"

        app:layout_constraintStart_toEndOf="@id/btnProfileTop"
        app:layout_constraintEnd_toStartOf="@id/btnNotifications"
        app:layout_constraintBottom_toBottomOf="@id/toolbarDashboard"
        android:layout_marginBottom="4dp" />


    <!-- Notification Bell -->
    <ImageButton
        android:id="@+id/btnNotifications"
        android:layout_width="20dp"
        android:layout_height="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Notifications"
        android:src="@drawable/ic_notifications"
        app:tint="@android:color/white"

        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintBottom_toBottomOf="@id/toolbarDashboard" />

    <!-- Total Balance (transparent card, text only) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTotalBalance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarDashboard"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvTotalBalanceAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:text="₱12,500.00" />

            <TextView
                android:id="@+id/tvTotalBalanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:alpha="0.85"
                android:text="Total Balance"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Income & Expense (merged in one white card) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardIncomeExpense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/cardTotalBalance"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">

            <!-- Income column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <TextView
                    android:id="@+id/tvIncomeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/income_label"
                    android:textColor="@color/dark_gray"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvIncomeAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/income_green"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    tools:text="₱18,000.00" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="14dp"
                android:background="#E6E6E6" />

            <!-- Expense column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <TextView
                    android:id="@+id/tvExpenseLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expense_label"
                    android:textColor="@color/dark_gray"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvExpenseAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/expense_red"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    tools:text="₱5,500.00" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Quick Stats (pure transparent container) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardQuickStats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/cardIncomeExpense"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd">

        <!-- Make Quick Stats vertical (stacked sections) -->
        <LinearLayout
            android:layout_width="355dp"
            android:layout_height="266dp"
            android:orientation="vertical"
            android:padding="6dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">
            <!-- =======================
                 1) Mini pies row
                 ======================= -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Income breakdown -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvIncomeBreakdownLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:text="Income Breakdown"
                        android:textColor="@color/dark_gray"
                        android:textSize="11sp" />

                    <!-- Placeholder (mini pie chart) -->
                    <FrameLayout
                        android:id="@+id/containerIncomePie"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/light_gray" />
                </LinearLayout>

                <!-- Expense breakdown -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvExpenseBreakdownLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:text="Expense Breakdown"
                        android:textColor="@color/dark_gray"
                        android:textSize="11sp" />

                    <!-- Placeholder (mini pie chart) -->
                    <FrameLayout
                        android:id="@+id/containerExpensePie"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/light_gray" />
                </LinearLayout>

            </LinearLayout>

            <!-- spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <!-- =======================
                 2) Budget Health (FULL WIDTH)
                 ======================= -->
            <LinearLayout
                android:id="@+id/layoutBudgetHealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvBudgetHealthLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="Budget Health"
                        android:textColor="@color/dark_gray"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tvBudgetHealthPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_dark"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:text="78%" />
                </LinearLayout>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressBudget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="78"
                    app:indicatorColor="@color/primary"
                    app:trackColor="@color/primary_light"
                    app:trackCornerRadius="10dp"
                    app:trackThickness="10dp" />

                <!-- Used vs Rem -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvBudgetUsed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Used: ₱820"
                        android:textColor="@color/dark_gray"
                        android:textSize="10sp"
                        tools:text="Used: ₱820" />

                    <TextView
                        android:id="@+id/tvBudgetRem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rem: ₱680"
                        android:textColor="@color/dark_gray"
                        android:textSize="10sp"
                        tools:text="Rem: ₱680" />
                </LinearLayout>

            </LinearLayout>

            <!-- =======================
                 Divider between Budget and Debt/Loan
                 ======================= -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0" />

            <!-- =======================
                 3) Debt & Loan (FULL WIDTH)
                 ======================= -->
            <LinearLayout
                android:id="@+id/layoutDebtLoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDebtLoanLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:text="Debt &amp; Loan"
                    android:textColor="@color/dark_gray"
                    android:textSize="11sp" />

                <!-- Row: Next Due -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDebtNextDueLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Next Due"
                        android:textColor="@color/dark_gray"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvDebtNextDueValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="₱250 • 2 days"
                        android:textColor="@color/dark_gray"
                        android:textSize="10sp"
                        tools:text="₱250 • 2 days" />
                </LinearLayout>

                <!-- Row: Active -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDebtActiveLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Active"
                        android:textColor="@color/dark_gray"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvDebtActiveValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="2"
                        android:textColor="@color/dark_gray"
                        android:textSize="10sp"
                        tools:text="2" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <!-- Recent Transactions Header -->
    <LinearLayout
        android:id="@+id/layoutRecentHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/cardQuickStats"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd">

        <TextView
            android:id="@+id/tvRecentTransactions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recent Transactions"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/dark_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSeeAllTransactions"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See all" />
    </LinearLayout>

    <!-- Recent Transactions List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTransactions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingBottom="12dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/layoutRecentHeader"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar"
        tools:listitem="@layout/item_transaction_compact" />

    <!-- Bottom Nav (pill style) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomNavBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- LEFT SIDE -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnAddTransaction"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- Dashboard -->
                <ImageButton
                    android:id="@+id/btnNavDashboard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_dashboard"
                    android:contentDescription="Dashboard"
                    app:tint="@color/primary" />

                <!-- Transactions -->
                <ImageButton
                    android:id="@+id/btnNavTransactions"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:contentDescription="Transactions"
                    android:src="@drawable/ic_transaction"
                    android:layout_marginEnd="20dp"
                    app:tint="#9E9E9E" />
            </LinearLayout>

            <!-- CENTER ADD TRANSACTION BUTTON -->
            <FrameLayout
                android:id="@+id/btnAddTransaction"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_circle_primary_ripple"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/ivAddIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_add2"
                    app:tint="@android:color/white"
                    android:contentDescription="Add Transaction" />
            </FrameLayout>


            <!-- RIGHT SIDE -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                app:layout_constraintStart_toEndOf="@id/btnAddTransaction"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- Reports -->
                <ImageButton
                    android:id="@+id/btnNavReports"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_reports"
                    android:contentDescription="Reports"
                    android:layout_marginStart="20dp"
                    app:tint="#9E9E9E" />

                <!-- More -->
                <ImageButton
                    android:id="@+id/btnNavMore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_more_horiz"
                    android:contentDescription="More"
                    android:layout_marginEnd="20dp"
                    app:tint="#9E9E9E" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
